{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ES2020"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2020",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    "**/.*.js"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
